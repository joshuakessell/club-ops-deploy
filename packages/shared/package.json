{
  "name": "@club-ops/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "check:esm": "node ./scripts/check-esm.mjs",
    "build": "tsc && pnpm check:esm",
    "dev": "tsc --watch",
    "pretest": "pnpm build",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "lint": "npx eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
