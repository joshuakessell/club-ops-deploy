+import { isRecord } from '@club-ops/shared';
+
+export interface StaffSession {
+  staffId: string;
+  name: string;
+  role: 'STAFF' | 'ADMIN';
+  sessionToken: string;
+}
+
+export function parseStaffSession(value: unknown): StaffSession | null {
+  if (!isRecord(value)) return null;
+
+  const v = value as Record<string, unknown>;
+  const staffId = v['staffId'];
+  const name = v['name'];
+  const role = v['role'];
+  const sessionToken = v['sessionToken'];
+
+  if (typeof staffId !== 'string') return null;
+  if (typeof name !== 'string') return null;
+  if (role !== 'STAFF' && role !== 'ADMIN') return null;
+  if (typeof sessionToken !== 'string') return null;
+
+  return { staffId, name, role, sessionToken };
+}
