{
  "name": "@club-ops/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm exec tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "db:start": "node scripts/compose.mjs up -d",
    "db:stop": "node scripts/compose.mjs down",
    "db:reset": "node scripts/compose.mjs reset && pnpm exec tsx scripts/wait-for-db.ts",
    "db:migrate": "pnpm exec tsx scripts/wait-for-db.ts && pnpm exec tsx scripts/migrate.ts",
    "db:migrate:status": "pnpm exec tsx scripts/wait-for-db.ts && pnpm exec tsx src/db/migrate-status.ts",
    "seed": "pnpm exec tsx scripts/wait-for-db.ts && pnpm exec tsx src/db/seed.ts",
    "seed:demo": "DEMO_MODE=true pnpm exec tsx src/db/seed-demo.ts",
    "seed:all": "pnpm -s run seed && pnpm -s run seed:demo"
  },
  "dependencies": {
    "@club-ops/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/websocket": "^8.3.1",
    "@faker-js/faker": "^9.3.0",
    "@simplewebauthn/server": "^9.0.0",
    "@simplewebauthn/types": "^9.0.0",
    "@zxing/library": "^0.21.0",
    "aamva-parser": "^1.4.1",
    "bcrypt": "^5.1.1",
    "fastify": "^4.25.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.0",
    "square": "^36.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "node-pg-migrate": "^7.7.0",
    "pdf-parse": "^1.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
