{
  "name": "@club-ops/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "node --import tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "pnpm db:migrate && pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "lint": "npx eslint src",
    "typecheck": "tsc --noEmit",
    "db:start": "node scripts/compose.mjs up -d",
    "db:wait": "node --import tsx scripts/wait-for-db.ts",
    "db:stop": "node scripts/compose.mjs down",
    "db:setup": "node --import tsx scripts/setup-db.ts || powershell -ExecutionPolicy Bypass -File scripts/setup-db.ps1",
    "db:migrate": "pnpm db:wait && node --import tsx src/db/migrate.ts",
    "db:migrate:status": "node --import tsx src/db/migrate.ts status",
    "db:migrate:rollback": "node --import tsx src/db/migrate.ts rollback",
    "db:reset": "node scripts/compose.mjs reset",
    "seed": "pnpm db:wait && node --import tsx src/db/seed.ts",
    "update-staff": "node --import tsx scripts/update-staff-names.ts"
  },
  "dependencies": {
    "@club-ops/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/websocket": "^8.3.1",
    "@simplewebauthn/server": "^9.0.0",
    "@simplewebauthn/types": "^9.0.0",
    "@zxing/library": "^0.21.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.25.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "pdf-parse": "^1.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
