{
  "name": "@club-ops/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "node --import tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:migrate": "node --import tsx src/db/migrate.ts",
    "db:migrate:status": "node --import tsx src/db/migrate.ts status",
    "db:migrate:rollback": "node --import tsx src/db/migrate.ts rollback",
    "db:reset": "docker compose down -v && docker compose up -d",
    "seed": "node --import tsx src/db/seed.ts"
  },
  "dependencies": {
    "@club-ops/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/websocket": "^8.3.1",
    "fastify": "^4.25.0",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}

